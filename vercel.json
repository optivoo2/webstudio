{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "pnpm --filter='@webstudio-is/builder' build",
  "installCommand": "pnpm install --no-frozen-lockfile --force",
  "outputDirectory": "apps/builder/build",
  "framework": "remix",
  "functions": {
    "apps/builder/build/server/**/*.js": {
      "runtime": "nodejs@18.x"
    }
  },
  "build": {
    "env": {
      "ENABLE_VC_BUILD": "1"
    }
  },
  "git": {
    "deploymentEnabled": true
  },
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
