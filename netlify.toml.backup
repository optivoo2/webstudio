[build]
  # Directory to change to before starting a build
  base = "apps/builder"
  
  # Directory that contains the deploy-ready HTML files and assets
  publish = "build/client"
  
  # Directory for Netlify Functions
  functions = "netlify/functions"
  
  # Default build command (disabled for manual deployment)
  # command = "cd ../.. && pnpm install && pnpm run build"

[build.environment]
  NODE_ENV = "production"

# Serve static assets directly (higher priority)
[[redirects]]
  from = "/assets/*"
  to = "/assets/:splat"
  status = 200

# Serve other static files
[[redirects]]
  from = "/favicon.ico"
  to = "/favicon.ico"
  status = 200

[[redirects]]
  from = "/robots.txt"
  to = "/robots.txt"
  status = 200

# Redirect all other requests to the Remix server function
[[redirects]]
  from = "/*"
  to = "/.netlify/functions/remix-server"
  status = 200
  
# Headers for all paths
[[headers]]
  for = "/*"
  [headers.values]
    X-Frame-Options = "DENY"
    X-XSS-Protection = "1; mode=block"
    X-Content-Type-Options = "nosniff"
    Referrer-Policy = "strict-origin-when-cross-origin"

# Cache static assets
[[headers]]
  for = "/assets/*"
  [headers.values]
    Cache-Control = "public, max-age=31536000, immutable"
